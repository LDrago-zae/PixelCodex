<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:padding="16dp"
    android:background="#102020">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#1A2A2A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_gradient_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Announcements"
                android:textSize="20sp"
                android:textColor="#B0BEC5"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/announcementDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Announcement Description"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/announcementEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter User Email"
                android:textColor="#FFFFFF"
                android:textColorHint="#B0BEC5"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textColor="#FFFFFF"
                android:backgroundTint="#283593"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#121212"
    android:padding="16dp">

    <!-- Card for Content -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/gradient_background"
        app:cardBackgroundColor="@color/nav_bar_color"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Lottie Animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/add_animation"
                android:layout_width="122dp"
                android:layout_height="127dp"
                android:contentDescription="Add game animation"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="@color/primary"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/add_animation" />

            <!-- Main Message -->
            <TextView
                android:id="@+id/add_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Want to request a game?"
                android:textColor="@color/text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Submessage -->
            <TextView
                android:id="@+id/add_submessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Press the add icon again to request another game"
                android:textColor="@color/text_secondary"
                android:textSize="16sp"
                android:gravity="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
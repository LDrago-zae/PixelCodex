<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B2838"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$89"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="286dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:contentDescription="@string/applogo"
            android:src="@drawable/applogo" />

        <ImageView
            android:id="@+id/cartIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cart"
            android:contentDescription="@string/cart"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Featured Games -->
    <TextView
        android:id="@+id/featuredTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEATURED"
        android:textColor="#F5E6CA"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/featuredViewPager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- New on Steam -->
    <TextView
        android:id="@+id/newOnSteamTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_on_codex"
        android:textColor="#F5E6CA"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newOnSteamRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        tools:listitem="@layout/view_pager2"
        android:layout_marginTop="8dp" />

    <!-- Recommended for You -->
    <TextView
        android:id="@+id/recommendedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECOMMENDED FOR YOU"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recommendedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="horizontal"
        tools:listitem="@layout/view_pager2"
        android:layout_marginTop="8dp" />

</LinearLayout>
